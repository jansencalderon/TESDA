<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="view"
            type="com.tip.capstone.mlearning.ui.difficulty.DifficultyView" />

        <variable
            name="difficulty"
            type="com.tip.capstone.mlearning.model.Difficulty" />
    </data>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:foreground="?attr/selectableItemBackground"
        app:cardElevation="2dp"
        app:cardCornerRadius="2dp"
        android:onClick="@{() -> view.onTermClicked(difficulty)}">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/activity_vertical_margin">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="@{difficulty.title}"
                android:textColor="@color/gray"
                android:textSize="20sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="@{difficulty.objective}"
                android:fontFamily="sans-serif-light"
                android:textColor="@color/gray"
                android:textSize="14sp" />

        </LinearLayout>
    </android.support.v7.widget.CardView>
</layout>
